            android:value="ae8696c9f626fd42728f7563dcd18f9e781c6a2a" />

        <activity android:name="com.ankit.apps.whatsappdirect.New.Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ankit.apps.whatsappdirect.New.Activity.TermsAndPrivacyActivity" />
        <activity android:name="com.ankit.apps.whatsappdirect.New.Activity.CallLogHistoryList" />
